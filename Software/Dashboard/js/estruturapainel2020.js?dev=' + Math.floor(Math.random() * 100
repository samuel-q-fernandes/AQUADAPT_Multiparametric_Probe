//get values from mysql database
async function getValues(estacaoID, x, y, firstParameter, parameters, units, parametersUnit){

    console.log(firstParameter)
    console.log(estacaoID)
    var datValues;



    fetch('https://neurasensory.com/aquadaptAPI/queryEstacaoParameter.php?station=' + encodeURIComponent(estacaoID) + '&parameter=' + encodeURIComponent(firstParameter))
        .then(response => {
            // Check if the response is OK
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            // Parse the response as JSON
            return response.json();
        })
        .then(dataV => {
            // Handle the JSON data
            console.log(dataV);

            //alert(dataV)

            return loadLateral(dataV, x, y, estacaoID, parameters, firstParameter, parametersUnit);
            // Now you can do something with the data
        })
        .catch(error => {
            // Handle errors
            console.error('There was a problem with the fetch operation:', error);
        });



}


