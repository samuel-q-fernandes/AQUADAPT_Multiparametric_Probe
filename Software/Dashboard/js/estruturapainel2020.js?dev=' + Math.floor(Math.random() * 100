var stringParametersDict = {
    p: "pH",
    l: "Water Level",
    c: "Electrical Conductivity",
    t: "Temperature"
};

var stringUnitsDict = {
    p: "Sorensen pH Scale",
    l: "cm",
    c: "µS/cm",
    t: "ºC"
};


async function autocontroloHtml(estacaoID, x, y) {
    console.log(estacaoID);
    // Define the station and parameter values
    var stationValue = estacaoID;
    var parameterValue = 't';
    var data;
    var dataReturn;



    var stringParameters=[];
    var stringUnits=[];
    var stringParametersUnit=[];




    fetch('https://neurasensory.com/aquadaptAPI/queryStationParameters.php?station=' + encodeURIComponent(stationValue))
        .then(response => {
            // Check if the response is OK
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            // Parse the response as JSON
            return response.json();
        })
        .then(data => {
            // Handle the JSON data
          //  console.log(data);



            //console.log(data); // Handle the data

            for (var p in data) {
                //alert(data[p]);

                stringParameters.push(stringParametersDict[data[p]])
                stringUnits.push(stringUnitsDict[data[p]])
                stringParametersUnit.push(data[p])


                // do something with "key" and "value" variables
            }

            dataReturn = getValues(estacaoID, x, y, data[0], stringParameters, stringUnits, stringParametersUnit);
            return dataReturn;



            // Now you can do something with the data
        })
        .catch(error => {
            // Handle errors
            console.error('There was a problem with the fetch operation:', error);
        });


}





